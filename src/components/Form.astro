---
interface Props {}
---

<section class="form-wrapper">
    <form>
        <div>
            <label for="uploadavatar">Upload Avatar</label>
            <div class="dropbox-zone" tabindex="0">
                <span class="upload-icon">
                    <img
                        src="/assets/images/icon-upload.svg"
                        alt="Upload Icon"
                    />
                </span>
                <p>Drag and drop or click to upload</p>
            </div>
            <small class="dropbox-hint">
                <img src="/assets/images/icon-info.svg" alt="" />
                Upload your photo (JPG or PNG, max size: 500KB).
            </small>
        </div>
        <div class="input-wrapper">
            <label for="fullname">Full Name</label>
            <input type="text" id="fullname" />
        </div>
        <div class="input-wrapper">
            <label for="email">Email Adress</label>
            <input
                type="text"
                name="email"
                id="email"
                placeholder="example@email.com"
            />
        </div>
        <div class="input-wrapper">
            <label for="githubuser">Github Username</label>
            <input
                type="text"
                name="githubuser"
                id="githubuser"
                placeholder="@yourusername"
            />
        </div>

        <button type="submit" class="btn btn-primary">Generate My Ticket</button
        >
    </form>
</section>

<style>
    .form-wrapper {
        margin-top: 2rem;
        margin-bottom: 3rem;
    }

    form {
        display: flex;
        flex-flow: column nowrap;
        gap: 1.5rem;
        label {
            font-weight: 500;
        }
    }

    .upload-icon {
        display: inline-block;
        width: 50px;
        padding: 0.5em;
        border-radius: 12px;
        outline: 1px solid var(--neutral-500);
        background-color: hsla(0, 0%, 100%, 0.158);
    }

    .dropbox-hint {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 0.75rem;
        color: var(--neutral-300);
        font-size: 12px;

        & > img {
            width: 20px;
        }
    }

    .dropbox-zone {
        backdrop-filter: blur(2px);
        min-height: 150px;
        max-height: 175px;
        display: flex;
        flex-flow: column nowrap;
        align-items: center;
        justify-content: center;
        margin-top: 0.75rem;
        padding: 1.5em;
        background-color: var(--neutral-100);
        background-image: url("data:image/svg+xml,%3csvg width='100%25' height='100%25' xmlns='http://www.w3.org/2000/svg'%3e%3crect width='100%25' height='100%25' fill='none' rx='18' ry='18' stroke='hsl(245, 15%, 58%)' stroke-width='3' stroke-dasharray='9' stroke-dashoffset='0' stroke-linecap='butt'/%3e%3c/svg%3e");
        border-radius: 18px;

        p {
            margin-top: 1rem;
            color: var(--neutral-300);
        }
    }

    .dropbox-zone:hover {
        background-color: var(--neutral-150);
    }

    .dropbox-zone:focus-visible {
        outline: 2px solid var(--neutral-300);
        outline-offset: 2px;
    }

    .input-wrapper {
        display: flex;
        flex-flow: column nowrap;
        gap: 0.75rem;

        input[type="text"] {
            outline: none;
            background-color: var(--neutral-100);
            border: 1px solid var(--neutral-500);
            padding: 1em;
            border-radius: 0.75rem;
            color: var(--neutral-300);

            backdrop-filter: blur(2px);
        }

        input::placeholder {
            color: var(--neutral-300);
        }
    }

    .input-wrapper input[type="text"]:hover {
        background-color: var(--neutral-150);
        cursor: pointer;
    }

    .input-wrapper input[type="text"]:focus {
        outline: 2px solid var(--neutral-300);
        outline-offset: 2px;
    }

    

    @media (width >= 1024px) {
        .btn-primary {
            box-shadow: 0px 0px 0px var(--orange-500);
            transition: background 0.3s ease;
        }

        .btn-primary:hover {
            background-color: var(--orange-700);
            box-shadow: 0px 6px 0px var(--orange-500);
        }
    }
</style>
