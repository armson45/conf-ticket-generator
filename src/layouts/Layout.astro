---
import "../styles/global.css";
import Header from "../components/Header.astro";

interface Props {
    pageTitle?: string;
}

const { pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>David Sibrian {pageTitle ? "| " + pageTitle : ""}</title>
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
    </body>
</html>

<style is:global>
    :root {
        --neutral-0: hsl(0, 0%, 100%);
        --neutral-100: hsla(0, 0%, 100%, 0.096);
        --neutral-150: rgba(255, 255, 255, 0.2);
        --neutral-300: hsl(252, 6%, 83%);
        --neutral-500: hsl(245, 15%, 58%);
        --neutral-700: hsl(245, 19%, 35%);
        --neutral-900: hsl(248, 70%, 10%);

        --orange-500: hsl(7, 88%, 67%);
        --orange-700: hsl(7, 71%, 60%);
        --grad-text: hsl(7, 86%, 67%) to hsl(0, 0%, 100%);
    }

    html {
        font-family: "Inconsolata", sans-serif;
        color: var(--neutral-0);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;

        background-image: url("/assets/images/background-mobile.png");
    }

    body {
        background-image: 
            url("/assets/images/pattern-lines.svg"),
            url("/assets/images/pattern-squiggly-line-top.svg"),
            url("/assets/images/pattern-squiggly-line-bottom-mobile-tablet.svg"),
            url("/assets/images/pattern-circle.svg"),
            url("/assets/images/pattern-circle.svg");
        background-position:
            center,
            top 20px right,
            bottom 0px left,
            right -10% top 65%, 
            left -5% top -2%;
        background-size: cover, 130px, 250px, 100px, 100px;
        background-repeat: no-repeat;
    }

    main {
        width: 90%;
        max-width: 890px;
        margin-inline: auto;
    }

    .btn {
        border: none;
        outline: none;
        border-radius: 12px;
        cursor: pointer;
        padding: 1em;
        color: var(--neutral-900);
        font-weight: 800;
        font-size: 18px;
        background-color: var(--orange-500);
    }

    .btn:focus {
        outline: 2px solid var(--neutral-0);
        outline-offset: 2px;
    }

    @media (width >= 768px) {
        html {
            background-image: url("/assets/images/background-tablet.png");
        }

        body {
           background-position:
            center,
            top 60px right,
            bottom left,
            right -20% top 65%,
            left -8% top -8%;
        background-size: cover, 230px, 390px, 210px, 210px;
        }
    }

    @media (width >= 1024px) {
        html {
            background-image: url("/assets/images/background-desktop.png");
        }

        body {
          background-image: 
            url("/assets/images/pattern-lines.svg"),
            url("/assets/images/pattern-squiggly-line-top.svg"),
            url("/assets/images/pattern-squiggly-line-bottom-desktop.svg"),
            url("/assets/images/pattern-circle.svg"),
            url("/assets/images/pattern-circle.svg");
            background-position:
            center,
            top 60px right,
            bottom left,
            right 20% top 60%,
            left 2% top -5%;
        background-size: cover, 450px, 825px, 210px, 210px;
        }
    }
</style>
